# Docker Hub Configuration
DOCKERHUB_USER=your-dockerhub-username
DOCKERHUB_TOKEN=your-dockerhub-token

# Notion Configuration
NOTION_API_KEY=secret_your-notion-key
NOTION_DATABASE_ID=your-notion-database-id 
